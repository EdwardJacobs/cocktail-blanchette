<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/1600x900/?cocktail');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">

  <div class="row d-flex justify-content-between">
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <% @cocktail.doses.each do |dose| %>
        <div>

          <div>
            <ul class="list-group">
              <li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %><%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
                <i class="fa fa-trash destroy_dose" style="color: black"></i>
                <% end %>
              </li>
            </ul>
          </div>

        </div>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>


<% if @cocktail.photo? %>
  <% background_url = cl_image_path @cocktail.photo, width: 400, height: 500, crop: :fill %>
  <% else %>
  <% background_url = 'https://source.unsplash.com/500x400/?cocktail' %>
<% end %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= background_url %>');">
  <div class="banner-content">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>

<div class="container">
  <div class="row d-flex justify-content-between">
    <div class="col-sm-12 col-md-6 mb-3">
      <h3>Recipe</h3>
      <% @cocktail.doses.each do |dose| %>
        <div>
          <div class="d-flex">
            <p><%= dose.description %> <%= dose.ingredient.name %><%= link_to dose_path(dose), method: :delete, data: {confirm: "Are you sure?"} do %>
              <i class="fa fa-trash destroy_dose" style="color: black"></i>
              <% end %>
            </p>
          </div>
        </div>
      <% end %>
      <%= link_to "Delete Cocktail", cocktail_path(@cocktail), method: :delete, class: "btn btn-flat" %>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
    </div>
  </div>
</div>

<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script>AOS.init();</script>

